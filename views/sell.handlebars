<!doctype html>

<html>
<head>
	<title>Textbook App</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/introHCI.css" rel="stylesheet">
		{{>tracking_code_script}}
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

	<div class=container>

	<!--- NAVBAR -->
	<nav class="navbar navbar-default">

			<form method="POST" action="index">
				<input type="hidden" name="username" value="{{username}}"> 
				<button type="IndexButton" class="btn btn-default pull-right">
  				<span class="glyphicon glyphicon-home"></span>
				</button>
			</form>

			<p class="navbar-text pull-right">Hello, {{username}}</p>

  		<div class="container-fluid">
   		 <div class="navbar-header">

       <div class="dropdown pull-left">
 		 <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
   		 <span class="glyphicon glyphicon-align-justify"></span>
  		</button>

  	 	 <ul class="dropdown-menu dropdown-menu-left" role="menu" aria-labelledby="dropdownMenu1">
   		    		
   		 <form method="POST" action="buy">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="BuyBtn" class="btn btn-link">Buy</button>
		</form> 
   		
   		<form method="POST" action="sell">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="SellBtn" class="btn btn-link">Sell</button>
		</form> 

   		<form method="POST" action="inbox">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="InboxButton" class="btn btn-link">Messages</button>
		</form>

    	<form method="POST" action="transactions">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="InboxButton" class="btn btn-link">My Offers/Transactions</button>
		</form>

    	<li class="divider"></li>
		<form method="GET" action="/">
		<button id="Logout" class="btn btn-link">Logout</button><br>
		</form>
 		</ul>

 				</div>
    		</div>
  		</div>
	</nav>
	<!--- NAVBAR END -->

	<div align="left">
		<input type="button" class="btn btn-sm" onclick="history.back();"  value="Back"> 
	</div>	

	<div align="center">
		<h4> What book would you like to sell? </h4>
		<h5><em>You don't have to input all the fields if you don't want to!</em></h5>
		<div class="sellform">
		<form method="POST" action="insert_offer">
			<div style="float:left">Title: </div><div style="float:right"><input type="text" name="title"> </div><br><br>
			<div style="float:left">Author: </div><div style="float:right"><input type="text" name="author"></div> <br><br>
			<input type="hidden" name="seller" value="{{username}}">
			<div style="float:left">ISBN: </div><div style="float:right"><input type="text" name="isbn"></div> <br><br>
			<div style="float:left">Course: </div><div style="float:right"> <input type="text" name="course"></div><br> <br>
			<div style="float:left">Condition: </div><div style="float:right"><input type="text" name="condition"> </div><br><br>
			<div style="float:left">Image URL: </div><div style="float:right"><input type="text" name="imageurl"></div><br><br>
			When can you meet up with your buyer?: <textarea name="availability" cols="30" rows="10"></textarea> <br>
			Location: <select name="location">
					     <option value="Price Center">Price Center</option>
					     <option value="Police Station">Police Station</option>
					     <option value="Geisel">Geisel</option>
					     <option value="Off campus/Other">Off campus/Other</option>
			          </select> <br>
			<input type="hidden" name="username" value="{{username}}">
			<button id="SendPost" style="display: none;"></button>
		</div>
		</form>
		<button id="PostOfferButton" class="btn btn-primary" onclick=confirmWindow()>Post My Book!</button>
	</div>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>

</div>
</body>



</html>
<script>
	var load_date;
	$(document).ready(function() {
		load_date = new Date();
	});
	function confirmWindow() {
		var confirmed = confirm("Confirm post offer?");
		if(confirmed) {
			var leave_date = new Date();
			var sec_spent = (leave_date.getTime() - load_date.getTime()) / 1000.0;
			console.log("time spent on sell: " + sec_spent);
			woopra.track("sell_time_spent",{"sec_spent" : sec_spent} );		
			$("#SendPost").click();

		}
	}
</script>