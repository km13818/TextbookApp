<!doctype html>

<html>
<head>
	<title>Textbook App</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/buy.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

	{{>tracking_code_script}}     
</head>

<body>

	<div class=container>

	<!--- NAVBAR -->
	<nav class="navbar navbar-default">

			<form method="POST" action="index">
				<input type="hidden" name="username" value="{{username}}"> 
				<button type="IndexButton" class="btn btn-default pull-right">
  				<span class="glyphicon glyphicon-home"></span>
				</button>
			</form>

			<p class="navbar-text pull-right">Hello, {{username}}</p>

  		<div class="container-fluid">
   		 <div class="navbar-header">

       <div class="dropdown pull-left">
 		 <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
   		 <span class="glyphicon glyphicon-align-justify"></span>
  		</button>

  	 	 <ul class="dropdown-menu dropdown-menu-left" role="menu" aria-labelledby="dropdownMenu1">
   		    		
   		 <form method="POST" action="buy">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="BuyBtn" class="btn btn-link">Buy</button>
		</form> 
   		
   		<form method="POST" action="sell">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="SellBtn" class="btn btn-link">Sell</button>
		</form> 

   		<form method="POST" action="inbox">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="InboxButton" class="btn btn-link">Messages</button>
		</form>

    	<form method="POST" action="transactions">
				<input type="hidden" name="username" value="{{username}}"> 
				<button id="InboxButton" class="btn btn-link">My Offers/Transactions</button>
		</form>

    	<li class="divider"></li>
		<form method="GET" action="/">
		<button id="Logout" class="btn btn-link">Logout</button><br>
		</form>
 		</ul>

 				</div>
    		</div>
  		</div>
	</nav>
	<!--- NAVBAR END -->

	<div align="left">
		<input type="button" class="btn btn-sm" onclick="history.back();"  value="Back"> 
	</div>	

	<div align="center">
		<h1> <strong>I'd like to buy... </strong></h1><br>
		<h4><em>Search by: </em></h4>
		<form method="POST" action="search_offers">
				
			<div style="float:left">Title: </div> <div style="float:right"><input type="text" name="title">  <button class="GoButton" >Go!</button></div><br><br>
				
			<div style="float:left">Author: </div><div style="float:right"><input type="text" name="author"> <button class="GoButton" >Go!</button></div><br><br>
				
			<div style="float:left">ISBN: </div><div style="float:right"><input type="text" name="isbn"> <button class="GoButton" >Go!</button></div><br><br>
				
			<div style="float:left">Course: </div><div style="float:right"><input type="text" name="course"> <button class="GoButton" >Go!</button></div><br><br>


			<input type="hidden" name="username" value="{{username}}"> 
			

		</form>
		<form method="POST" action="display_offers">
			<input type="hidden" name="username" value="{{username}}"> 
			<button id="ViewAllOffersButton" class="btn btn-primary" >View all offers</button>
		</form>
	<div>
	<br>


	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>
</body>



</html>
