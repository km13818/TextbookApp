	</div>
	<br>
	<h1 align="center">Current offers</h1>

	{{#each offers}}
		<div align="center" class="container">
          <img src="{{imageurl}}" height="400" width="200" />
          <p>
          <b>Seller:</b> {{seller}} <br>
          <b>Title:</b> {{title}} <br>
          <b>Author:</b> {{author}} <br>
          <b>ISBN:</b> {{isbn}} <br>
          <b>Course:</b> {{course}}<br>
          <b>Location:</b> {{location}}<br>
          <b>Availability:</b> {{availability}}<br>
          </p>
        </div>
	{{/each}}
